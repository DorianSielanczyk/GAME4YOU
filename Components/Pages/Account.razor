@code {
    private string userEmail, userFirstName, userLastName, userRole;
    private bool isLoaded = false;
    private bool _showPassword = false;
    private bool _hasCheckedToken = false;
    private int CartItemCount;
    private bool IsLoggedIn;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasCheckedToken)
        {
            _hasCheckedToken = true;
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");

            if (string.IsNullOrWhiteSpace(token))
            {
                IsLoggedIn = false;
                Navigation.NavigateTo("/", true);
                return;
            }

            IsLoggedIn = true;
            CartItemCount = CartService.GetCartItemCount();

            try
            {
                JwtSecurityTokenHandler.DefaultInboundClaimTypeMap.Clear();
                var handler = new JwtSecurityTokenHandler();
                var jwtToken = handler.ReadJwtToken(token);
                userEmail = jwtToken.Claims.FirstOrDefault(c => c.Type == "email")?.Value;
                userFirstName = jwtToken.Claims.FirstOrDefault(c => c.Type == "firstName")?.Value;
                userLastName = jwtToken.Claims.FirstOrDefault(c => c.Type == "lastName")?.Value;
                userRole = jwtToken.Claims.FirstOrDefault(c => c.Type == "role")?.Value;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Błąd podczas dekodowania tokenu: {ex.Message}");
            }

            isLoaded = true;
            StateHasChanged();
        }
    }

    void TogglePassword()
    {
        _showPassword = !_showPassword;
    }
}
